# YouTube API Key (optional, for better search results)
# Get one from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=

# Flask settings
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
SECRET_KEY=change-this-to-a-random-secret-key

# Player settings (vlc, omxplayer, or mpv)
PLAYER_BACKEND=vlc

# Audio output (hdmi, local, or both)
AUDIO_OUTPUT=hdmi

# Display timeout in seconds between videos
DISPLAY_TIMEOUT=30

# Video rotation interval in seconds (to prevent burn-in)
ROTATION_INTERVAL=3600

# Debug mode
DEBUG=False

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO